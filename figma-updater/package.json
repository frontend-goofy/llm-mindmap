{
  "name": "figma-updater",
  "version": "1.0.0",
  "description": "CLI for inspecting Figma text diffs and updating project files accordingly",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "figma-updater": "bin/figma-updater.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "lint": "eslint --ext .ts src",
    "start": "node --loader ts-node/esm src/index.ts",
    "test": "vitest run"
  },
  "keywords": [
    "figma",
    "diff",
    "cli",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.8",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "globby": "^13.2.2",
    "pino": "^8.17.0",
    "pino-pretty": "^10.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^1.6.0"
  }
}
